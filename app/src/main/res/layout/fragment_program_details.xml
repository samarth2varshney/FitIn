<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F7"
    tools:context=".ui.program_details.ProgramDetailsFragment">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ultimate Body Recomposition"
            android:textSize="23dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:clipToOutline="true"
        android:background="@drawable/all_curved_corners"
        android:src="@drawable/details_img" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduction"
            android:textSize="@dimen/heading_text_size"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achieve your fitness goals with our comprehensive workout plan designed to build strenght, increase stamina, and boost overall health. Prefect for anyone looking to make a lifestyle change"
            android:textSize="@dimen/para_text_size"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Plan Duration"
                android:textSize="@dimen/para_text_size"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 weeks"
                android:textSize="@dimen/para_text_size"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Type of Workout"
                android:textColor="@color/black"
                android:textSize="@dimen/para_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strenght"
                android:textColor="@color/black"
                android:textSize="@dimen/para_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Difficulty Level"
                android:textColor="@color/black"
                android:textSize="@dimen/para_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginner"
                android:textColor="@color/black"
                android:textSize="@dimen/para_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipment Needed"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/para_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dumbbles"
                android:textColor="@color/black"
                android:textSize="@dimen/para_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Workout Frequency"
                android:textColor="@color/black"
                android:textSize="@dimen/para_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="5 days a week"
                android:textColor="@color/black"
                android:textSize="@dimen/para_text_size" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="What's Included"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/heading_text_size" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/all_curved_corners"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clipToOutline="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/custom_user_profile_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Daily/Weekly Workout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/para_text_size" />

                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/custom_button_bg"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="View"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clipToOutline="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/custom_user_profile_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Diet plan"
                    android:textColor="@color/black"
                    android:textSize="@dimen/para_text_size" />

                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/custom_button_bg"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="View"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clipToOutline="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/custom_user_profile_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Video Calls"
                    android:textColor="@color/black"
                    android:textSize="@dimen/para_text_size" />

                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/custom_button_bg"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="View"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clipToOutline="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/custom_user_profile_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trainers bio"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/para_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello I am an IFBB pro ...."
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/para_text_size" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/heading_text_size"
            android:textColor="@color/black"
            android:text="User Reviews" />

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/buy_now"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Now"/>

    </LinearLayout>

</ScrollView>