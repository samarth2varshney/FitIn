<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_weight="1"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.3">

                <LinearLayout
                    android:id="@+id/image_container_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/image_left_1"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"/>

                    <ImageView
                        android:id="@+id/image_left_2"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/image_container_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/image_left_3"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"/>

                    <ImageView
                        android:id="@+id/image_left_4"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"/>

                </LinearLayout>

            </LinearLayout>

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/video_right_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:layout_weight="0.7"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            android:visibility="visible">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/video_left_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.3">

                <LinearLayout
                    android:id="@+id/image_container_top_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_right_1"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"/>

                    <ImageView
                        android:id="@+id/image_right_2"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/image_container_bottom_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/image_right_3"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"/>

                    <ImageView
                        android:id="@+id/image_right_4"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>